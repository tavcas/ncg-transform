{
  "name": "cart-transformer-ts",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "shopify": "npm exec -- shopify",
    "typegen": "npm exec -- shopify app function typegen",
    "build": "npm exec -- shopify app function build",
    "preview": "npm exec -- shopify app function run  --input run.json",
    "test": "vitest",
    "dev": "npm run build && npm run preview"
  },
  "codegen": {
    "schema": "schema.graphql",
    "documents": "src/*.graphql",
    "generates": {
      "./generated/api.ts": {
        "plugins": [
          "typescript",
          "typescript-operations"
        ]
      }
    },
    "config": {
      "omitOperationSuffix": true
    }
  },
  "devDependencies": {
    "vitest": "2.1.5"
  },
  "dependencies": {
    "@shopify/shopify_function": "0.1.0",
    "javy": "0.1.1"
  }
}
