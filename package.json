{
  "name": "ncg-transform",
  "private": true,
  "scripts": {
    "ngrok": "ngrok http --domain=personally-positive-sheep.ngrok-free.app 9100",
    "build": "NODE_ENV=production remix build",
    "predev": "prisma generate && prisma migrate deploy",
    "dev": "env-cmd shopify app dev",
    "debug": "env-cmd -f .env.debug shopify app dev -c=shopify.app.debug.toml",
    "config": "shopify app deploy -c=shopify.app.toml",
    "config:dev": "shopify app deploy -c=shopify.app.dev.toml -f",
    "push": "env-cmd -f .env.prod bash heroku.deploy.sh",
    "push:dev": "env-cmd -f .env.dev bash heroku.deploy.sh",
    "deploy": "npm run push && npm run config",
    "deploy:dev": "npm run push:dev && npm run config:dev",
    "generate": "shopify app generate",
    "env": "shopify app env",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "setup": "prisma generate && prisma migrate deploy",
    "migrate": "node migrate.js",
    "docker": "docker build . -t ncg-transform && docker rm --force ncg-transform && docker run --env-file .env --name ncg-transform -p 3000:3000 ncg-transform"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@remix-run/react": "^2.12.1",
    "@remix-run/serve": "^1.19.1",
    "@shopify/app": "3.58.2",
    "@shopify/app-bridge-react": "^4.1.5",
    "@shopify/app-bridge-types": "^0.0.15",
    "@shopify/cli": "3.64.1",
    "@shopify/discount-app-components": "^3.0.1",
    "@shopify/polaris": "^12.19.2",
    "@shopify/react-form": "^2.7.3",
    "@shopify/shopify-app-remix": "^1.0.3",
    "@shopify/shopify-app-session-storage-prisma": "^1.0.0",
    "cross-env": "^7.0.3",
    "isbot": "latest",
    "prisma": "^4.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^7.7.0"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.16",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "^4.1.1",
    "@parcel/watcher": "^2.4.1",
    "@remix-run/dev": "^1.19.1",
    "@remix-run/eslint-config": "^1.19.1",
    "@types/eslint": "^8.40.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8"
  },
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "workspaces": [
    "web",
    "web/frontend",
    "extensions/*"
  ],
  "author": "luketull"
}
